<UserControl
    x:Class="Library.MVVM.View.UserAccountView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Library.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mdes="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:viewmodel="clr-namespace:Library.MVVM.ViewModel"
    d:DataContext="{d:DesignInstance Type=viewmodel:UserAccountViewModel}"
    d:DesignHeight="570"
    d:DesignWidth="1000"
    Background="{StaticResource BackgroundColor}"
    mc:Ignorable="d">

    <Grid
        Grid.Column="1"
        Width="450"
        Margin="0,10"
        IsEnabled="{Binding IsUserSelected}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="20"
            FontWeight="SemiBold"
            Text="User Info" />

        <Grid Grid.Row="1" Margin="10,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="60" />
                <RowDefinition Height="60" />
                <RowDefinition Height="60" />
                <RowDefinition Height="20" />
                <RowDefinition Height="60" />
                <RowDefinition Height="60" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <TextBlock
                    Margin="5,0,5,0"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Text="Login" />
                <TextBox
                    Width="260"
                    Height="36"
                    Margin="0,0,10,0"
                    Padding="10,4"
                    HorizontalAlignment="Right"
                    mdes:TextFieldAssist.TextFieldCornerRadius="2"
                    FontSize="16"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding Login, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
            </Grid>

            <Grid Grid.Row="1">
                <TextBlock
                    Margin="5,0,5,0"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Text="E-mail" />
                <TextBox
                    Width="260"
                    Height="36"
                    Margin="0,0,10,0"
                    Padding="10,4"
                    HorizontalAlignment="Right"
                    mdes:TextFieldAssist.TextFieldCornerRadius="2"
                    mdes:ValidationAssist.Background="Transparent"
                    FontSize="16"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding Email, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
            </Grid>

            <Grid Grid.Row="2">
                <TextBlock
                    Margin="5,0,5,0"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Text="Name" />
                <TextBox
                    Width="260"
                    Height="36"
                    Margin="0,0,10,0"
                    Padding="10,4"
                    HorizontalAlignment="Right"
                    mdes:TextFieldAssist.TextFieldCornerRadius="2"
                    FontSize="16"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
            </Grid>

            <Grid Grid.Row="3">
                <TextBlock
                    Margin="5,0,5,0"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Text="Second Name" />

                <TextBox
                    Width="260"
                    Height="36"
                    Margin="0,0,10,0"
                    Padding="10,4"
                    HorizontalAlignment="Right"
                    mdes:TextFieldAssist.TextFieldCornerRadius="2"
                    FontSize="16"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding SecondName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
            </Grid>

            <Separator Grid.Row="4" />

            <Grid Grid.Row="5">
                <TextBlock
                    Margin="5,0,5,0"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Text="New Password" />

                <Grid>
                    <TextBox
                        Name="passtext"
                        Width="260"
                        Height="36"
                        Margin="0,0,10,0"
                        Padding="10,4"
                        HorizontalAlignment="Right"
                        Panel.ZIndex="-1"
                        mdes:TextFieldAssist.TextFieldCornerRadius="2"
                        Focusable="False"
                        FontSize="16"
                        Foreground="Transparent"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" />

                    <PasswordBox
                        Name="pass"
                        Width="260"
                        Height="36"
                        Margin="0,0,10,0"
                        Padding="10,4"
                        HorizontalAlignment="Right"
                        mdes:TextFieldAssist.TextFieldCornerRadius="2"
                        FontSize="16"
                        PasswordChanged="pass_PasswordChanged"
                        Style="{StaticResource MaterialDesignOutlinedPasswordBox}" />
                </Grid>
            </Grid>

            <Grid Grid.Row="6">
                <TextBlock
                    Margin="5,0,5,0"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Text="Verify Password" />

                <Grid>
                    <TextBox
                        Name="verifpasstext"
                        Width="260"
                        Height="36"
                        Margin="0,0,10,0"
                        Padding="10,4"
                        Panel.ZIndex="0"
                        HorizontalAlignment="Right"
                        mdes:TextFieldAssist.TextFieldCornerRadius="2"
                        Focusable="False"
                        FontSize="16"
                        Foreground="Transparent"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding PasswordVerify, UpdateSourceTrigger=PropertyChanged}" />

                    <PasswordBox
                        Name="verifpass"
                        Width="260"
                        Height="36"
                        Margin="0,0,10,0"
                        Padding="10,4"
                        HorizontalAlignment="Right"
                        mdes:TextFieldAssist.TextFieldCornerRadius="2"
                        FontSize="16"
                        PasswordChanged="verifpass_PasswordChanged"
                        Style="{StaticResource MaterialDesignOutlinedPasswordBox}" />
                </Grid>
            </Grid>

            <Button
                Grid.Row="7"
                Width="150"
                Command="{Binding ChangePasswordCommand}"
                Content="Change Password"
                Style="{StaticResource MainButton}" />

        </Grid>

        <Grid Grid.Row="2" VerticalAlignment="Bottom">
            <Button
                Width="100"
                Command="{Binding SaveInfoCommand}"
                Content="Save"
                FontSize="17"
                Style="{StaticResource MainButton}" />
        </Grid>
    </Grid>
</UserControl>
