<Window
    x:Class="Library.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mdes="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:viewModel="clr-namespace:Library.MVVM.ViewModel"
    Width="1050"
    Height="600"
    d:DataContext="{d:DesignInstance Type=viewModel:MainWindViewModel}"
    AllowsTransparency="True"
    Background="Transparent"
    IsTabStop="False"
    ResizeMode="NoResize"
    UseLayoutRounding="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Border Background="{StaticResource BackgroundColor}">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Padding="0"
                Panel.ZIndex="10"
                Background="{StaticResource MainColor}"
                BorderThickness="0"
                MouseDown="Grid_MouseDown">

                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">

                    <Button
                        Width="30"
                        Height="30"
                        Margin="10,0,5,0"
                        Padding="0"
                        Background="{x:Null}"
                        BorderBrush="{x:Null}"
                        Click="Button_Click_1"
                        Foreground="White"
                        IsTabStop="False">
                        <mdes:PackIcon Kind="WindowMinimize" />
                    </Button>

                    <Button
                        Width="30"
                        Height="30"
                        Margin="10,0,5,0"
                        Padding="0"
                        Background="{x:Null}"
                        BorderBrush="{x:Null}"
                        Click="Button_Click"
                        Foreground="White"
                        IsTabStop="False">
                        <mdes:PackIcon Kind="Close" />
                    </Button>

                </StackPanel>
            </Border>


            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>

                <mdes:DialogHost IsOpen="{Binding Dialog}">
                    <mdes:DialogHost.DialogContent>
                        <Grid Margin="10">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="Success" />
                        </Grid>
                    </mdes:DialogHost.DialogContent>
                    <ContentControl Grid.Column="0" Content="{Binding CurrentView}" />
                </mdes:DialogHost>

                <!--  Controls  -->
                <Grid Grid.Column="1" Background="{DynamicResource MainColor}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10" />
                        <RowDefinition Height="60" />
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="60" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="60" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="60" />
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="60" />
                        <RowDefinition Height="20" />
                    </Grid.RowDefinitions>

                    <!--<ToggleButton
                            Name="MenuToggleBtn"
                            Grid.Row="1"
                            Background="Transparent"
                            Cursor="Hand"
                            Foreground="White"
                            IsChecked="False"
                            Style="{StaticResource MaterialDesignHamburgerToggleButton}" />-->

                    <RadioButton
                        Name="AllBooks"
                        Grid.Row="3"
                        Command="{Binding BooksViewCommand}"
                        Content="BookOpenVariant"
                        Foreground="white"
                        IsChecked="True"
                        Style="{StaticResource MenuRadioItem}"
                        ToolTip="All books"
                        ToolTipService.HorizontalOffset="-70"
                        ToolTipService.Placement="RelativePoint"
                        ToolTipService.VerticalOffset="15" />

                    <RadioButton
                        Name="Favorites"
                        Grid.Row="5"
                        Command="{Binding AddBookViewCommand}"
                        Content="BookAdd"
                        Foreground="white"
                        Style="{StaticResource MenuRadioItem}"
                        ToolTip="Add Book"
                        ToolTipService.HorizontalOffset="-70"
                        ToolTipService.Placement="RelativePoint"
                        ToolTipService.VerticalOffset="15" />

                    <RadioButton
                        Name="AccountR"
                        Grid.Row="7"
                        Command="{Binding AccountViewCommand}"
                        Content="Account"
                        Foreground="white"
                        Style="{StaticResource MenuRadioItem}"
                        ToolTip="Account"
                        ToolTipService.HorizontalOffset="-65"
                        ToolTipService.Placement="RelativePoint"
                        ToolTipService.VerticalOffset="15" />

                    <Button
                        Grid.Row="9"
                        Grid.ColumnSpan="2"
                        Click="LogOut"
                        Foreground="white"
                        Style="{StaticResource LogoutButtonExtended}"
                        ToolTip="LogOut"
                        ToolTipService.HorizontalOffset="-65"
                        ToolTipService.Placement="RelativePoint"
                        ToolTipService.VerticalOffset="15" />
                </Grid>
            </Grid>
        </Grid>
    </Border>

</Window>
