<Window
    x:Class="Library.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:l="clr-namespace:Library"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mdes="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:viewModel="clr-namespace:Library.MVVM.ViewModel"
    Width="1020"
    Height="600"
    AllowsTransparency="True"
    Background="Transparent"
    IsTabStop="False"
    ResizeMode="NoResize"
    UseLayoutRounding="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.DataContext>
        <viewModel:MainWindViewModel />
    </Window.DataContext>

    <Border Background="{StaticResource BackgroundColor}">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Padding="0"
                Panel.ZIndex="10"
                Background="{StaticResource MainColor}"
                MouseDown="Grid_MouseDown">
                
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">

                    <Button
                        Width="30"
                        Height="30"
                        Margin="10,0,5,0"
                        Padding="0"
                        Background="{x:Null}"
                        BorderBrush="{x:Null}"
                        Click="Button_Click_1"
                        Foreground="White"
                        IsTabStop="False">
                        <mdes:PackIcon Kind="WindowMinimize" />
                    </Button>

                    <Button
                        Width="30"
                        Height="30"
                        Margin="10,0,5,0"
                        Padding="0"
                        Background="{x:Null}"
                        BorderBrush="{x:Null}"
                        Click="Button_Click"
                        Foreground="White"
                        IsTabStop="False">
                        <mdes:PackIcon Kind="Close" />
                    </Button>

                </StackPanel>
            </Border>

            <mdes:DrawerHost Grid.Row="1">
                
                <mdes:DrawerHost.LeftDrawerContent>
                    <Grid></Grid>
                </mdes:DrawerHost.LeftDrawerContent>

                <ContentControl Content="{Binding }"/>
            </mdes:DrawerHost>
            <!--<Grid Grid.Row="1" Grid.RowSpan="2">
                --><!--  Основной элемент, в котором будет все содержимое окна  --><!--
                <mdes:DrawerHost
                    Margin="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="0">
                    --><!--  Собственно, сама выдвижная панель  --><!--
                    <mdes:DrawerHost.LeftDrawerContent>
                        <StackPanel Width="300" Margin="5">
                            <Button
                                Height="30"
                                Content="Кнопка1"
                                Style="{StaticResource MaterialDesignFlatButton}" />

                            <Button
                                Height="30"
                                Content="Кнопка2"
                                Style="{StaticResource MaterialDesignFlatButton}" />

                            <Separator Margin="10" Style="{StaticResource MaterialDesignDarkSeparator}" />

                            <Button
                                Margin="4"
                                HorizontalAlignment="Center"
                                Command="{x:Static mdes:DrawerHost.CloseDrawerCommand}"
                                CommandParameter="{x:Static Dock.Left}"
                                Style="{DynamicResource MaterialDesignFlatButton}">
                                <StackPanel Orientation="Horizontal">
                                    <mdes:PackIcon
                                        Width="25"
                                        Height="25"
                                        Foreground="{StaticResource PrimaryHueDarkBrush}"
                                        Kind="CloseBoxOutline" />
                                    <TextBlock
                                        Margin="3"
                                        Foreground="{StaticResource PrimaryHueDarkBrush}"
                                        Text="Закрыть" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </mdes:DrawerHost.LeftDrawerContent>

                    --><!--  Тут контент самого окна  --><!--
                    <Grid>
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="top">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40" />
                                <RowDefinition Height="{Binding ActHeight}" />
                            </Grid.RowDefinitions>

                            --><!--  Верхняя панель  --><!--
                            <mdes:ColorZone Padding="0" Mode="Standard">

                                <DockPanel
                                    Height="40"
                                    Margin="5,2,2,2"
                                    VerticalAlignment="Center">
                                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                        --><!--  MenuButton  --><!--
                                        <Button
                                            x:Name="ButtonOpen"
                                            Width="40"
                                            Height="40"
                                            Padding="0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"
                                            Background="{x:Null}"
                                            BorderBrush="{x:Null}"
                                            Command="{x:Static mdes:DrawerHost.OpenDrawerCommand}"
                                            CommandParameter="{x:Static Dock.Left}">
                                            <mdes:PackIcon
                                                Width="30"
                                                Height="30"
                                                Foreground="{StaticResource PrimaryHueMidBrush}"
                                                Kind="Menu" />
                                        </Button>

                                    </StackPanel>


                                </DockPanel>

                            </mdes:ColorZone>

                            --><!--  Тут основной контент  --><!--
                            <StackPanel
                                Grid.Row="1"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Top"
                                Orientation="Vertical">
                                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                                    <ContentControl
                                        x:Name="ContentField"
                                        MaxHeight="{Binding ActHeight}"
                                        Content="{Binding CurrentControl}"
                                        Opacity="{Binding FrameOpacity}" />
                                </ScrollViewer>

                            </StackPanel>

                        </Grid>
                    </Grid>
                </mdes:DrawerHost>
            </Grid>-->
            <!--<StackPanel
                Grid.Row="1"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">
                <RadioButton Content="All books" Style="{StaticResource RadioButtonStyle}" />
                <RadioButton Content="My Libary" Style="{StaticResource RadioButtonStyle}" />
                <RadioButton Content="Account" Style="{StaticResource RadioButtonStyle}" />
                <RadioButton
                    Content="Reader [WIP]"
                    IsEnabled="False"
                    Style="{StaticResource RadioButtonStyle}" />
            </StackPanel>

            <ContentControl Grid.Row="2" Content="{Binding}" />-->

        </Grid>
    </Border>

</Window>
