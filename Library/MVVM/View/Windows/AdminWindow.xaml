<Window
    x:Class="Library.MVVM.View.Windows.AdminWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:l="clr-namespace:Library"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mdes="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:viewModel="clr-namespace:Library.MVVM.ViewModel"
    Width="1020"
    Height="600"
    d:DataContext="{d:DesignInstance Type=viewModel:AdminWindViewModel}"
    AllowsTransparency="True"
    Background="Transparent"
    IsTabStop="False"
    ResizeMode="NoResize"
    UseLayoutRounding="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <!--<Window.DataContext>
        <viewModel:AdminWindViewModel />
    </Window.DataContext>-->

    <Border Background="{StaticResource BackgroundColor}">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Padding="0"
                Panel.ZIndex="10"
                Background="{StaticResource MainColor}"
                MouseDown="Grid_MouseDown">
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">

                    <Button
                        Width="30"
                        Height="30"
                        Margin="10,0,5,0"
                        Padding="0"
                        Background="{x:Null}"
                        BorderBrush="{x:Null}"
                        Click="Button_Click_1"
                        Foreground="White"
                        IsTabStop="False">
                        <mdes:PackIcon Kind="WindowMinimize" />
                    </Button>

                    <Button
                        Width="30"
                        Height="30"
                        Margin="10,0,5,0"
                        Padding="0"
                        Background="{x:Null}"
                        BorderBrush="{x:Null}"
                        Click="Button_Click"
                        Foreground="White"
                        IsTabStop="False">
                        <mdes:PackIcon Kind="Close" />
                    </Button>

                </StackPanel>
            </Border>

            <Grid Grid.Row="1" VerticalAlignment="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>

                <RadioButton
                    Command="{Binding ToUsersCommand}"
                    Content="{Binding TxtUser}"
                    IsChecked="True"
                    Style="{StaticResource RadioButtonStyle}" />

                <RadioButton
                    Grid.Column="1"
                    Command="{Binding ToBooksCommand}"
                    Content="{Binding TxtBook}"
                    Style="{StaticResource RadioButtonStyle}" />
                <!--<RadioButton Content="Account" Style="{StaticResource RadioButtonStyle}" />
                <RadioButton
                    Content="Reader [WIP]"
                    IsEnabled="False"
                    Style="{StaticResource RadioButtonStyle}" />-->

                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Button
                        Grid.Row="0"
                        HorizontalAlignment="Stretch"
                        Command="{Binding OffAutoLoginCommand}"
                        Content="Off Auto login"
                        FontSize="10"
                        Style="{StaticResource MainButton}" />

                    <Button
                        Grid.Row="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Bottom"
                        Command="{Binding LogOutCommand}"
                        Content="LogOut"
                        FontSize="10"
                        Style="{StaticResource MainButton}" />
                </Grid>
            </Grid>

            <ContentControl Grid.Row="2" Content="{Binding CurrentView}" />

        </Grid>
    </Border>

</Window>
