<UserControl
    x:Class="Library.MVVM.View.UsersView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mdes="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:viewmodel="clr-namespace:Library.MVVM.ViewModel"
    d:DataContext="{d:DesignInstance Type=viewmodel:UsersViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="1000"
    mc:Ignorable="d">

    <Border Padding="10" Background="{StaticResource BackgroundColor}">
        <Grid HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280" />
                <ColumnDefinition />
                <ColumnDefinition Width="280" />
            </Grid.ColumnDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="20" />
                    <RowDefinition />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>

                <TextBlock
                    Margin="15,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Text="User List:" />

                <TextBox
                    Grid.Row="1"
                    Margin="0,0,10,0"
                    mdes:HintAssist.Foreground="Gray"
                    mdes:HintAssist.Hint="Search"
                    FontSize="14"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Text="{Binding UserSearch, UpdateSourceTrigger=PropertyChanged}" />

                <Grid Grid.Row="2" Margin="0,5,10,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="165" />
                        <ColumnDefinition Width="60" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="12"
                        Text="Id" />

                    <TextBlock
                        Grid.Column="1"
                        Margin="30,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="12"
                        Text="Login" />

                    <TextBlock
                        Grid.Column="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="12"
                        Text="" />
                </Grid>

                <ListBox
                    Grid.Row="3"
                    Margin="0,0,10,0"
                    ItemsSource="{Binding UserList}"
                    SelectedItem="{Binding SelectedUser}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border VerticalAlignment="Stretch">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Margin="10,5,10,5"
                                        HorizontalAlignment="Center"
                                        FontSize="15"
                                        Text="{Binding UserId}" />

                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="10,5,10,5"
                                        FontSize="15"
                                        Text="{Binding Login}" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.Style>
                        <Style BasedOn="{StaticResource MaterialDesignListBox}" TargetType="{x:Type ListBox}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={x:Static RelativeSource.Self}, Path=Items.Count}" Value="0">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate>
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    FontSize="16"
                                                    FontStyle="Italic"
                                                    Text="Nothing found" />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.Style>
                </ListBox>

                <Grid Grid.Row="5" VerticalAlignment="Bottom">
                    <Button
                        Width="100"
                        Command="{Binding DeleteSelectedUser}"
                        Content="Delete"
                        FontSize="15"
                        Style="{StaticResource MainButton}" />
                </Grid>
            </Grid>

            <Grid Grid.Column="1" IsEnabled="{Binding IsUserSelected}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>

                <TextBlock
                    Margin="15,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Text="User Info:" />

                <Grid Grid.Row="1" Margin="10,0,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60" />
                        <RowDefinition Height="60" />
                        <RowDefinition Height="60" />
                        <RowDefinition Height="60" />
                        <RowDefinition Height="60" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <TextBlock
                            Margin="5,0,5,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text="Login" />
                        <TextBox
                            Width="260"
                            Height="36"
                            Margin="0,0,10,0"
                            Padding="10,4"
                            HorizontalAlignment="Right"
                            mdes:TextFieldAssist.TextFieldCornerRadius="2"
                            FontSize="16"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding Login, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    </Grid>

                    <Grid Grid.Row="1">
                        <TextBlock
                            Margin="5,0,5,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text="E-mail" />
                        <TextBox
                            Width="260"
                            Height="36"
                            Margin="0,0,10,0"
                            Padding="10,4"
                            HorizontalAlignment="Right"
                            mdes:TextFieldAssist.TextFieldCornerRadius="2"
                            mdes:ValidationAssist.Background="Transparent"
                            FontSize="16"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding Email, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    </Grid>

                    <Grid Grid.Row="2">
                        <TextBlock
                            Margin="5,0,5,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text="Name" />
                        <TextBox
                            Width="260"
                            Height="36"
                            Margin="0,0,10,0"
                            Padding="10,4"
                            HorizontalAlignment="Right"
                            mdes:TextFieldAssist.TextFieldCornerRadius="2"
                            FontSize="16"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    </Grid>

                    <Grid Grid.Row="3">
                        <TextBlock
                            Margin="5,0,5,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text="Second Name" />
                        <TextBox
                            Width="260"
                            Height="36"
                            Margin="0,0,10,0"
                            Padding="10,4"
                            HorizontalAlignment="Right"
                            mdes:TextFieldAssist.TextFieldCornerRadius="2"
                            FontSize="16"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding SecondName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    </Grid>
                </Grid>

                <Grid Grid.Row="2" VerticalAlignment="Bottom">
                    <Button
                        Width="100"
                        Command="{Binding SaveUserInfo}"
                        Content="Save"
                        FontSize="15"
                        Style="{StaticResource MainButton}" />
                </Grid>
            </Grid>

            <Grid Grid.Column="2" IsEnabled="{Binding IsUserSelected}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="20" />
                    <RowDefinition />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>

                <TextBlock
                    Margin="15,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Text="User's Book List:" />

                <TextBox
                    Grid.Row="1"
                    Margin="10,0,0,0"
                    mdes:HintAssist.Foreground="Gray"
                    mdes:HintAssist.Hint="Search"
                    FontSize="14"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Text="{Binding BookSearch, UpdateSourceTrigger=PropertyChanged}" />

                <Grid Grid.Row="2" Margin="0,5,10,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="165" />
                        <ColumnDefinition Width="60" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="12"
                        Text="" />

                    <TextBlock
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="12"
                        Text="Book Name" />

                    <TextBlock
                        Grid.Column="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="12"
                        Text="" />
                </Grid>

                <ListBox
                    Grid.Row="3"
                    Margin="10,0,0,0"
                    ItemsSource="{Binding UserBookList}"
                    SelectedItem="{Binding SelectedBook}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border VerticalAlignment="Stretch">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="0" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Column="0"
                                        Margin="10,5,10,5"
                                        FontSize="15"
                                        Text="{Binding Name}" />

                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="10,5,10,5"
                                        FontSize="15"
                                        Text="{Binding Author}" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.Style>
                        <Style BasedOn="{StaticResource MaterialDesignListBox}" TargetType="{x:Type ListBox}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={x:Static RelativeSource.Self}, Path=Items.Count}" Value="0">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate>
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    FontSize="16"
                                                    FontStyle="Italic"
                                                    Text="Nothing found" />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.Style>
                </ListBox>

                <Grid Grid.Row="5" VerticalAlignment="Bottom">
                    <Button
                        Width="100"
                        Command="{Binding OpenSelectedBook}"
                        Content="Open"
                        FontSize="15"
                        Style="{StaticResource MainButton}" />
                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>