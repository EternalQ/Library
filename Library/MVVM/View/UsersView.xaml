<UserControl
    x:Class="Library.MVVM.View.UsersView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Library.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mdes="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:viewmodel="clr-namespace:Library.MVVM.ViewModel"
    d:DataContext="{d:DesignInstance Type=viewmodel:UsersViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="1020"
    mc:Ignorable="d">

    <Border Padding="10" Background="white">
        <Grid HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>

                <TextBlock
                    Margin="15,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Text="User List:" />

                <ListBox
                    Grid.Row="1"
                    Margin="0,0,10,0"
                    ItemsSource="{Binding UserList}"
                    SelectedItem="{Binding SelectedUser}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border VerticalAlignment="Stretch">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Margin="10,5,10,5"
                                        HorizontalAlignment="Center"
                                        FontSize="15"
                                        Text="{Binding UserId}" />

                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="10,5,10,5"
                                        FontSize="15"
                                        Text="{Binding Login}" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Grid Grid.Row="2" VerticalAlignment="Bottom">
                    <Button
                        Width="100"
                        Command="{Binding DeleteSelectedUser}"
                        Content="Delete"
                        FontSize="15"
                        Style="{StaticResource MainButton}" />
                </Grid>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>

                <TextBlock
                    Margin="15,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Text="User Info:" />

                <Grid Grid.Row="1" Margin="10,0,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60" />
                        <RowDefinition Height="60" />
                        <RowDefinition Height="60" />
                        <RowDefinition Height="60" />
                        <RowDefinition Height="60" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <TextBlock
                            Margin="5,0,5,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text="Login" />
                        <TextBox
                            Width="220"
                            Height="36"
                            Margin="0 0 10 0"
                            HorizontalAlignment="Right"
                            mdes:TextFieldAssist.TextFieldCornerRadius="2"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>
                    
                    <Grid Grid.Row="1">
                        <TextBlock
                            Margin="5,0,5,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text="E-mail" />
                        <TextBox
                            Width="220"
                            Height="36"
                            HorizontalAlignment="Right"
                            Margin="0 0 10 0"
                            mdes:TextFieldAssist.TextFieldCornerRadius="2"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>
                    
                    <Grid Grid.Row="2">
                        <TextBlock
                            Margin="5,0,5,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text="Name" />
                        <TextBox
                            Width="220"
                            Height="36"
                            HorizontalAlignment="Right"
                            Margin="0 0 10 0"
                            mdes:TextFieldAssist.TextFieldCornerRadius="2"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>

                    <Grid Grid.Row="3">
                        <TextBlock
                            Margin="5,0,5,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text="Second Name" />
                        <TextBox
                            Width="220"
                            Height="36"
                            HorizontalAlignment="Right"
                            Margin="0 0 10 0"
                            mdes:TextFieldAssist.TextFieldCornerRadius="2"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding SecondName, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>
                </Grid>

                <Grid Grid.Row="2" VerticalAlignment="Bottom">
                    <Button
                        Width="100"
                        Command="{Binding SaveUserInfo}"
                        Content="Save"
                        FontSize="15"
                        Style="{StaticResource MainButton}" />
                </Grid>
            </Grid>

        </Grid>
    </Border>
</UserControl>
