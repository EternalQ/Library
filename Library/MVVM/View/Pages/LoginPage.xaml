<Page
    x:Class="Library.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:local="clr-namespace:Library.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mdes="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="LoginPage"
    d:DesignHeight="450"
    mc:Ignorable="d">

    <StackPanel Background="{StaticResource BackgroundColor}">

        <Label
            Margin="0,50,0,30"
            HorizontalAlignment="Center"
            Content="Authorization"
            FontSize="26"
            Foreground="Black" />

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition MinHeight="70" />
                <RowDefinition MinHeight="70" />
                <RowDefinition MinHeight="70" />
                <RowDefinition MinHeight="70" />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="0"
                Height="40"
                Margin="30,0,30,0"
                VerticalAlignment="Top"
                Orientation="Horizontal">

                <TextBox
                    Name="txtLogin"
                    Width="280"
                    mdes:HintAssist.Hint="Login"
                    BorderBrush="Black"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    TabIndex="0"
                    Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}">
                    <Validation.ErrorTemplate>
                        <ControlTemplate />
                    </Validation.ErrorTemplate>
                </TextBox>
                <mdes:PackIcon
                    Width="30"
                    Height="30"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    Foreground="Black"
                    Kind="User" />
            </StackPanel>

            <StackPanel
                Grid.Row="1"
                Height="40"
                Margin="30,0,30,0"
                VerticalAlignment="Top"
                Orientation="Horizontal">

                <Grid>
                    <TextBox
                        Name="txtPassword"
                        Width="280"
                        Panel.ZIndex="-1"
                        mdes:HintAssist.Hint="Password"
                        Foreground="Transparent"
                        IsTabStop="False"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" />

                    <PasswordBox
                        Name="txtPassbox"
                        Width="280"
                        mdes:HintAssist.Hint="Password"
                        PasswordChanged="txtPassbox_PasswordChanged"
                        Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                        TabIndex="2" />
                </Grid>
                <mdes:PackIcon
                    Width="30"
                    Height="30"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    Foreground="Black"
                    Kind="Lock" />
            </StackPanel>

            <CheckBox
                Grid.Row="2"
                Margin="30,0,0,10"
                VerticalAlignment="Bottom"
                Content="Remember me"
                Cursor="Hand"
                IsChecked="True" />

            <StackPanel Grid.Row="3" Margin="30,0,30,0">
                <StackPanel VerticalAlignment="Top" Orientation="Horizontal">

                    <Button
                        Width="130"
                        mdes:ButtonAssist.CornerRadius="0"
                        Command="{Binding Signin}"
                        Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                        TabIndex="2">
                        <Grid>
                            <TextBlock Text="Sign in">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Visible" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsRequestProcessing}" Value="True">
                                                <Setter Property="Visibility" Value="Hidden" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <fa:ImageAwesome
                                Width="20"
                                Height="20"
                                Foreground="White"
                                Icon="CircleOutlineNotch"
                                Spin="True"
                                SpinDuration="1">
                                <fa:ImageAwesome.Style>
                                    <Style TargetType="fa:ImageAwesome">
                                        <Setter Property="Visibility" Value="Hidden" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsRequestProcessing}" Value="True">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </fa:ImageAwesome.Style>
                            </fa:ImageAwesome>
                        </Grid>
                    </Button>

                    <Button
                        Width="130"
                        Margin="70,0,0,0"
                        mdes:ButtonAssist.CornerRadius="0"
                        Command="{Binding Registration}"
                        Content="Create account"
                        Style="{StaticResource MaterialDesignFlatLightBgButton}"
                        TabIndex="3" />

                </StackPanel>
                <TextBlock
                        Margin="0,5,0,0"
                        FontSize="12"
                        Foreground="Red"
                        Text="{Binding DatabaseError}" />
            </StackPanel>

        </Grid>
    </StackPanel>
</Page>
