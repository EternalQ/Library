                    <Grid Grid.Row="2" VerticalAlignment="Bottom">
                        <Button
                            Width="100"
                            Command="{Binding SaveBookInfo}"
                            Content="Save"
                            FontSize="15"
                            Style="{StaticResource MainButton}" />
                    </Grid>
                </Grid>

                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="40" />
                        <RowDefinition />
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Margin="15,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Text="Tag List:" />

                    <TextBox
                        Grid.Row="1"
                        Margin="10,0,0,0"
                        mdes:HintAssist.Foreground="Gray"
                        mdes:HintAssist.Hint="Search"
                        FontSize="14"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding TagSearch, UpdateSourceTrigger=PropertyChanged}" />

                    <ListBox
                        Grid.Row="2"
                        Margin="10,0,0,0"
                        ItemsSource="{Binding TagList}"
                        SelectedItem="{Binding SelectedTag}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border VerticalAlignment="Stretch">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Column="0"
                                            Margin="10,5,10,5"
                                            FontSize="15"
                                            Text="{Binding Name}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.Style>
                            <Style BasedOn="{StaticResource MaterialDesignListBox}" TargetType="{x:Type ListBox}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={x:Static RelativeSource.Self}, Path=Items.Count}" Value="0">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate>
                                                    <TextBlock
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        FontSize="16"
                                                        FontStyle="Italic"
                                                        Text="Nothing found" />
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.Style>
                    </ListBox>

                    <Grid Grid.Row="3" VerticalAlignment="Bottom">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Button
                            Width="100"
                            Command="{Binding OpenDialog}"
                            Content="New"
                            FontSize="15"
                            Style="{StaticResource MainButton}" />

                        <Button
                            Grid.Column="1"
                            Width="100"
                            Command="{Binding DeleteSelectedTag}"
                            Content="Delete"
                            FontSize="15"
                            Style="{StaticResource CancelButton}" />

                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </mdes:DialogHost>

</UserControl>
