<UserControl
    x:Class="Library.MVVM.View.BooksAdminView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mdes="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:viewmodel="clr-namespace:Library.MVVM.ViewModel"
    d:DataContext="{d:DesignInstance Type=viewmodel:BooksAdminViewModel}"
    d:DesignHeight="500"
    d:DesignWidth="1000"
    mc:Ignorable="d">

    <mdes:DialogHost CloseOnClickAway="True" IsOpen="{Binding IsOpen}">
        <mdes:DialogHost.DialogContent>
            <Grid Margin="20">
                <StackPanel>
                    <TextBlock
                        HorizontalAlignment="Left"
                        FontSize="18"
                        Text="Tag Name:" />

                    <TextBox
                        Width="200"
                        Height="36"
                        Margin="0,15,10,15"
                        Padding="10,4"
                        HorizontalAlignment="Right"
                        mdes:TextFieldAssist.TextFieldCornerRadius="2"
                        FontSize="16"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding TagName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                    <Button
                        Width="100"
                        HorizontalAlignment="Center"
                        Command="{Binding AddTag}"
                        Content="Add"
                        FontSize="16"
                        Style="{StaticResource MainButton}" />

                </StackPanel>
            </Grid>
        </mdes:DialogHost.DialogContent>
        <Border Padding="10" Background="{StaticResource BackgroundColor}">
            <Grid HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="280" />
                </Grid.ColumnDefinitions>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="20" />
                        <RowDefinition />
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Margin="15,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Text="Book List" />

                    <TextBox
                        Grid.Row="1"
                        Margin="0,0,10,0"
                        mdes:HintAssist.Foreground="Gray"
                        mdes:HintAssist.Hint="Search"
                        FontSize="14"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding BookSearch, UpdateSourceTrigger=PropertyChanged}" />

                    <Grid Grid.Row="2" Margin="0,5,10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40" />
                            <ColumnDefinition Width="165" />
                            <ColumnDefinition Width="60" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="Id" />

                        <TextBlock
                            Grid.Column="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="Name" />

                        <TextBlock
                            Grid.Column="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="Loads" />
                    </Grid>

                    <ListBox
                        Grid.Row="3"
                        Margin="0,0,10,0"
                        ItemsSource="{Binding BookList}"
                        SelectedItem="{Binding SelectedBook, Mode=TwoWay}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border VerticalAlignment="Stretch">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40" />
                                            <ColumnDefinition Width="165" />
                                            <ColumnDefinition Width="60" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Margin="0,5,0,5"
                                            HorizontalAlignment="Center"
                                            FontSize="15"
                                            Text="{Binding BookId}" />

                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="10,5,10,5"
                                            FontSize="15"
                                            Text="{Binding Name}" />

                                        <TextBlock
                                            Grid.Column="2"
                                            Margin="0,5,0,5"
                                            FontSize="15"
                                            Text="{Binding Downloads}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.Style>
                            <Style BasedOn="{StaticResource MaterialDesignListBox}" TargetType="{x:Type ListBox}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={x:Static RelativeSource.Self}, Path=Items.Count}" Value="0">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate>
                                                    <TextBlock
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        FontSize="16"
                                                        FontStyle="Italic"
                                                        Text="Nothing found" />
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.Style>
                    </ListBox>

                    <Grid Grid.Row="4" VerticalAlignment="Bottom">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Button
                            Width="100"
                            Command="{Binding AddBook}"
                            Content="Add"
                            FontSize="15"
                            Style="{StaticResource MainButton}" />

                        <Button
                            Grid.Column="1"
                            Width="100"
                            Margin="20,0"
                            VerticalAlignment="Top"
                            Command="{Binding DeleteSelectedBook}"
                            Content="Delete"
                            FontSize="15"
                            Style="{StaticResource CancelButton}" />
                    </Grid>
                </Grid>

                <Grid Grid.Column="1" IsEnabled="{Binding IsBookSelected}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition />
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Margin="15,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Text="Book Info:" />

                    <Grid Grid.Row="1" Margin="10,0,10,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60" />
                            <RowDefinition Height="60" />
                            <RowDefinition Height="90" />
                            <RowDefinition Height="100" />
                            <RowDefinition Height="*" />

                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <TextBlock
                                Margin="5,0,5,0"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Text="Name" />
                            <TextBox
                                Width="260"
                                Height="36"
                                Margin="0,0,10,0"
                                Padding="10,4"
                                HorizontalAlignment="Right"
                                mdes:TextFieldAssist.TextFieldCornerRadius="2"
                                FontSize="16"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                        </Grid>

                        <Grid Grid.Row="1">
                            <TextBlock
                                Margin="5,0,5,0"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Text="Author Name" />
                            <TextBox
                                Width="260"
                                Height="36"
                                Margin="0,0,10,0"
                                Padding="10,4"
                                HorizontalAlignment="Right"
                                mdes:TextFieldAssist.TextFieldCornerRadius="2"
                                FontSize="16"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Text="{Binding AuthorName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                        </Grid>

                        <Grid Grid.Row="2">
                            <TextBlock
                                Margin="5,0,5,0"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Text="Description" />
                            <TextBox
                                Width="260"
                                Margin="0,10,10,0"
                                Padding="10,4"
                                mdes:ValidationAssist.Background="Transparent"
                                HorizontalAlignment="Right"
                                mdes:TextFieldAssist.TextFieldCornerRadius="2"
                                AcceptsReturn="True"
                                FontSize="16"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Text="{Binding Description, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                TextWrapping="Wrap" />
                        </Grid>

                        <Grid Grid.Row="3" Margin="5,20,5,0">
                            <StackPanel>
                                <Button
                                    Command="{Binding BookEdit}"
                                    Content="Open full editor"
                                    Style="{StaticResource MainButton}" />
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="2" VerticalAlignment="Bottom">
                        <Button
                            Width="100"
                            Command="{Binding SaveBookInfo}"
                            Content="Save"
                            FontSize="15"
                            Style="{StaticResource MainButton}" />
                    </Grid>
                </Grid>

                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="40" />
                        <RowDefinition />
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Margin="15,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Text="Tag List:" />

                    <TextBox
                        Grid.Row="1"
                        Margin="10,0,0,0"
                        mdes:HintAssist.Foreground="Gray"
                        mdes:HintAssist.Hint="Search"
                        FontSize="14"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding TagSearch, UpdateSourceTrigger=PropertyChanged}" />

                    <ListBox
                        Grid.Row="2"
                        Margin="10,0,0,0"
                        ItemsSource="{Binding TagList}"
                        SelectedItem="{Binding SelectedTag}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border VerticalAlignment="Stretch">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Column="0"
                                            Margin="10,5,10,5"
                                            FontSize="15"
                                            Text="{Binding Name}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.Style>
                            <Style BasedOn="{StaticResource MaterialDesignListBox}" TargetType="{x:Type ListBox}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={x:Static RelativeSource.Self}, Path=Items.Count}" Value="0">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate>
                                                    <TextBlock
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        FontSize="16"
                                                        FontStyle="Italic"
                                                        Text="Nothing found" />
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.Style>
                    </ListBox>

                    <Grid
                        Grid.Row="3"
                        VerticalAlignment="Bottom"
                        IsEnabled="False"
                        ToolTip="Item disabled"
                        ToolTipService.Placement="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Button
                            Width="100"
                            Command="{Binding OpenDialog}"
                            Content="New"
                            FontSize="15"
                            Style="{StaticResource MainButton}" />

                        <Button
                            Grid.Column="1"
                            Width="100"
                            Command="{Binding DeleteSelectedTag}"
                            Content="Delete"
                            FontSize="15"
                            Style="{StaticResource CancelButton}" />

                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </mdes:DialogHost>

</UserControl>
