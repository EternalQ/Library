<Window
    x:Class="Library.Windows.AuthorizationWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Library.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mdes="http://materialdesigninxaml.net/winfx/xaml/themes"
    Width="390"
    Height="480"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <StackPanel Background="{StaticResource BackgroundColor}">
        <Grid
            Height="30"
            VerticalAlignment="Top"
            Background="{StaticResource MainColor}"
            MouseDown="Grid_MouseDown">

            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">

                <Button
                    Width="30"
                    Height="30"
                    Margin="10,0,5,0"
                    Padding="0"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Click="Button_Click_1"
                    Foreground="White"
                    IsTabStop="False">
                    <mdes:PackIcon Kind="WindowMinimize" />
                </Button>

                <Button
                    Width="30"
                    Height="30"
                    Margin="10,0,5,0"
                    Padding="0"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Click="Button_Click"
                    Foreground="White"
                    IsTabStop="False">
                    <mdes:PackIcon Kind="Close" />
                </Button>

            </StackPanel>
        </Grid>

        <Frame
            Name="mainFraim"
            IsTabStop="False"
            NavigationUIVisibility="Hidden" />
    </StackPanel>
</Window>
