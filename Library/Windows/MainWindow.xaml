<Window
    x:Class="Library.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:l="clr-namespace:Library"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mdes="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:viewModel="clr-namespace:Library.MVVM.ViewModel"
    Width="900"
    Height="600"
    AllowsTransparency="True"
    Background="Transparent"
    IsTabStop="False"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.DataContext>
        <viewModel:MainViewModel />
    </Window.DataContext>

    <Border Background="#eef3fb">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Grid.RowSpan="2"
                Margin="0,0,0,56.4"
                Padding="0"
                Panel.ZIndex="10"
                Background="#4582af"
                MouseDown="Grid_MouseDown">
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">

                    <Button
                        Width="30"
                        Height="30"
                        Margin="10,0,5,0"
                        Padding="0"
                        Background="{x:Null}"
                        BorderBrush="{x:Null}"
                        Click="Button_Click_1"
                        Foreground="White"
                        IsTabStop="False">
                        <mdes:PackIcon Kind="WindowMinimize" />
                    </Button>

                    <Button
                        Width="30"
                        Height="30"
                        Margin="10,0,5,0"
                        Padding="0"
                        Background="{x:Null}"
                        BorderBrush="{x:Null}"
                        Click="Button_Click"
                        Foreground="White"
                        IsTabStop="False">
                        <mdes:PackIcon Kind="Close" />
                    </Button>

                </StackPanel>
            </Border>

            <StackPanel
                Grid.Row="1"
                Height="60"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">
                <RadioButton
                    Margin="0"
                    Content="All books"
                    Foreground="Black"
                    Style="{StaticResource RadioButtonStyle}" />
                <RadioButton
                    Content="My Libary"
                    Foreground="Black"
                    Style="{StaticResource RadioButtonStyle}" />
                <RadioButton
                    Content="Account"
                    Foreground="Black"
                    Style="{StaticResource RadioButtonStyle}" />
                <RadioButton
                    Content="Reader [WIP]"
                    Foreground="Black"
                    Style="{StaticResource RadioButtonStyle}" />
            </StackPanel>
            <Label
                Grid.Row="1"
                Margin="0,0,15,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Content="Libra"
                FontSize="26"
                FontWeight="Medium" />

            <!--<Grid
                Grid.Row="1"
                Height="570"
                Margin="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

            </Grid>-->

        </Grid>
    </Border>

</Window>
