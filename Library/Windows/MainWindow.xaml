<Window
    x:Class="Library.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:l="clr-namespace:Library"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mdes="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:viewModel="clr-namespace:Library.MVVM.ViewModel"
    Width="900"
    Height="600"
    AllowsTransparency="True"
    Background="Transparent"
    IsTabStop="False"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d"
    UseLayoutRounding="True">

    <Window.DataContext>
        <viewModel:MainViewModel />
    </Window.DataContext>

    <Border Background="{StaticResource BackgroundColor}">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Padding="0"
                Panel.ZIndex="10"
                Background="{StaticResource MainColor}"
                MouseDown="Grid_MouseDown">
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">

                    <Button
                        Width="30"
                        Height="30"
                        Margin="10,0,5,0"
                        Padding="0"
                        Background="{x:Null}"
                        BorderBrush="{x:Null}"
                        Click="Button_Click_1"
                        Foreground="White"
                        IsTabStop="False">
                        <mdes:PackIcon Kind="WindowMinimize" />
                    </Button>

                    <Button
                        Width="30"
                        Height="30"
                        Margin="10,0,5,0"
                        Padding="0"
                        Background="{x:Null}"
                        BorderBrush="{x:Null}"
                        Click="Button_Click"
                        Foreground="White"
                        IsTabStop="False">
                        <mdes:PackIcon Kind="Close" />
                    </Button>

                </StackPanel>
            </Border>

            <StackPanel
                Grid.Row="1"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">
                <RadioButton
                    Content="All books"
                    Style="{StaticResource RadioButtonStyle}" />
                <RadioButton
                    Content="My Libary"
                    Style="{StaticResource RadioButtonStyle}" />
                <RadioButton
                    Content="Account"
                    Style="{StaticResource RadioButtonStyle}" />
                <RadioButton
                    Content="Reader [WIP]"
                    Style="{StaticResource RadioButtonStyle}" />
            </StackPanel>
            

            <ContentControl Grid.Row="2" Content="{Binding CurrentView}"/>

        </Grid>
    </Border>

</Window>
