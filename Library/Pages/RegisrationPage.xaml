<Page
    x:Class="Library.Pages.RegisrationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Library.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mdes="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:viewmodel="clr-namespace:Library.MVVM.ViewModel"
    Title="RegisrationPage"
    d:DesignHeight="450"
    mc:Ignorable="d">

    <Page.Resources>
        <Style
            x:Key="TextBoxVal"
            BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}"
            TargetType="TextBox">
            <Setter Property="Validation.ErrorTemplate">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <AdornedElementPlaceholder/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <StackPanel Background="Transparent">

        <Label
            Margin="0,50,0,30"
            HorizontalAlignment="Center"
            Content="Registration"
            FontSize="26"
            Foreground="Black" />

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition MinHeight="70" />
                <RowDefinition MinHeight="70" />
                <RowDefinition MinHeight="70" />
                <RowDefinition MinHeight="70" />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="0"
                Height="40"
                Margin="30,0,30,0"
                VerticalAlignment="Top"
                Orientation="Horizontal">

                <TextBox
                    Name="txtLogin"
                    Width="280"
                    mdes:HintAssist.Hint="Login"
                    BorderBrush="Black"
                    Style="{StaticResource TextBoxVal}"
                    TabIndex="0"
                    Text="{Binding Login, UpdateSourceTrigger=LostFocus}" />
                <mdes:PackIcon
                    Width="30"
                    Height="30"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    Foreground="Black"
                    Kind="User" />
            </StackPanel>

            <StackPanel
                Grid.Row="1"
                Height="40"
                Margin="30,0,30,0"
                VerticalAlignment="Top"
                Orientation="Horizontal">

                <TextBox
                    Name="txtPassword"
                    Width="280"
                    mdes:HintAssist.Hint="Password"
                    Style="{StaticResource TextBoxVal}"
                    TabIndex="1"
                    Text="{Binding Password, UpdateSourceTrigger=LostFocus}" />
                <mdes:PackIcon
                    Width="30"
                    Height="30"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    Foreground="Black"
                    Kind="Password" />
            </StackPanel>

            <StackPanel
                Grid.Row="2"
                Height="40"
                Margin="30,0,30,0"
                VerticalAlignment="Top"
                Orientation="Horizontal">

                <TextBox
                    Name="txtPasswordVerify"
                    Width="280"
                    mdes:HintAssist.Hint="Verify Password"
                    Style="{StaticResource TextBoxVal}"
                    TabIndex="2"
                    Text="{Binding PasswordVerify, UpdateSourceTrigger=LostFocus}" />
                <mdes:PackIcon
                    Width="30"
                    Height="30"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    Foreground="Black"
                    Kind="PasswordSecure" />
            </StackPanel>

            <StackPanel
                Grid.Row="3"
                Margin="30,0,30,0"
                VerticalAlignment="Top"
                Orientation="Horizontal">

                <Button
                    Name="Createbtn"
                    Width="130"
                    mdes:ButtonAssist.CornerRadius="0"
                    Command="{Binding Registration}"
                    Content="Create"
                    IsEnabled="{Binding RegBtnEnable}"
                    Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                    Background="{DynamicResource PrimColor}"
                    TabIndex="3" />

                <Button
                    Width="130"
                    Margin="70,0,0,0"
                    mdes:ButtonAssist.CornerRadius="0"
                    Command="{Binding Cancel}"
                    Content="Cancel"
                    Style="{StaticResource MaterialDesignFlatLightBgButton}"
                    Background="{DynamicResource MainColor}"
                    TabIndex="4" />

            </StackPanel>
        </Grid>
    </StackPanel>
</Page>
