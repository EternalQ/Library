<Page
    x:Class="Library.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Library.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mdes="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="LoginPage"
    d:DesignHeight="450"
    mc:Ignorable="d">

    <StackPanel Background="Transparent">

        <Label
            Margin="0,50,0,30"
            HorizontalAlignment="Center"
            Content="Authorization"
            FontSize="26"
            Foreground="Black" />

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition MinHeight="70"/>
                <RowDefinition MinHeight="70"/>
                <RowDefinition MinHeight="70"/>
                <RowDefinition MinHeight="70"/>
            </Grid.RowDefinitions>
            <StackPanel
                VerticalAlignment="Top"
                Grid.Row="0"
                Height="40"
                Margin="30,0,30,0"
                Orientation="Horizontal">

                <TextBox
                    Name="txtLogin"
                    Width="280"
                    mdes:HintAssist.Hint="Login"
                    BorderBrush="Black"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    TabIndex="0">
                    <Validation.ErrorTemplate>
                        <ControlTemplate />
                    </Validation.ErrorTemplate>
                </TextBox>
                <mdes:PackIcon
                    Width="30"
                    Height="30"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    Foreground="Black"
                    Kind="User" />
            </StackPanel>

            <StackPanel
                VerticalAlignment="Top"
                Grid.Row="1"
                Height="40"
                Margin="30,0,30,0"
                Orientation="Horizontal">

                <PasswordBox
                    Name="txtPassword"
                    Width="280"
                    mdes:HintAssist.Hint="Password"
                    Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                    TabIndex="1" />
                <mdes:PackIcon
                    Width="30"
                    Height="30"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    Foreground="Black"
                    Kind="Lock" />
            </StackPanel>

            <StackPanel
                VerticalAlignment="Top"
                Grid.Row="3"
                Margin="30,0,30,0"
                Orientation="Horizontal">

                <Button
                    Width="130"
                    mdes:ButtonAssist.CornerRadius="0"
                    Click="Button_Click_1"
                    Content="Sign in"
                    Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                    TabIndex="2" />

                <Button
                    Width="130"
                    Margin="70,0,0,0"
                    mdes:ButtonAssist.CornerRadius="0"
                    Click="Button_Click"
                    Content="Create account"
                    Style="{StaticResource MaterialDesignFlatLightBgButton}"
                    TabIndex="3" />

            </StackPanel>
        </Grid>
    </StackPanel>
</Page>
